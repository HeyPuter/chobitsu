{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/cjs",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "target": "ES2020",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src/**/*"]
}
